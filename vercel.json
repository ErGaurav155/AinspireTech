{
  "functions": {
    "app/**/*": {
      "maxDuration": 60
    }
  },
  "headers": [
    {
      "source": "/widget-loader.js",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors *;"
        }
      ]
    },
    {
      "source": "/widget.js",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors *;"
        }
      ]
    },
    {
      "source": "/ChatBots",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors *;"
        }
      ]
    },
    {
      "source": "/widget.bundle.js",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors *;"
        }
      ]
    },
    {
      "source": "/api/validate-widget",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://pathology-pink.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": " POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}
