{
  "functions": {
    "app/**/*": {
      "maxDuration": 60
    }
  },
  "headers": [
    {
      "source": ["/widget-loader.js", "/widget.bundle.js"],
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors *;"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self';"
        }
      ]
    }
  ]
}
